<window>

	<defaultcontrol>1001</defaultcontrol>

	<coordinates>

		<system>1</system>

		<posx>0</posx>
		<posy>0</posy>

	</coordinates>

	<animation effect="fade" time="250">WindowOpen</animation>

	<animation effect="fade" time="250">WindowClose</animation>

	<controls>

		<control type="group">

			<posx>230</posx>
			<posy>180</posy>

			<control type="image">
				<posx>0</posx>
				<posy>0</posy>

				<width>800</width>

				<height>450</height>
				<texture border="40">default-panel.png</texture>

			</control>

			<control type="image" >
				<description>logo</description>

				<posx>30</posx>

				<posy>20</posy>
				<width>155</width>
				<height>36</height>
				<texture>logo.png</texture>

			</control>
			<control type="label" id="3001">
				<description>header</description>
				<posx>0</posx>
				<posy>40</posy>
				<width>800</width>
				<height>30</height>
				<font>font18</font>
				<textcolor>white</textcolor>
				<align>center</align>
			</control>
			<control type="image">
				<description>sep</description>
				<posx>40</posx>
				<posy>65</posy>
				<width>700</width>
				<height>2</height>
				<texture>separator.png</texture>
			</control>
			<control type="textbox" id="3002">
				  <description>textarea</description>
				  <posx>35</posx>
				  <posy>80</posy>
				  <width>680</width>
				  <height>200</height>
				  <visible>true</visible>
				  <colordiffuse>FFFFFFFF</colordiffuse>
				  <font>font18</font>
				  <textcolor>white</textcolor>
				  <pulseonselect></pulseonselect>
				  <pagecontrol>302</pagecontrol>
				  <scrolltime>200</scrolltime>
				  <autoscroll delay="6000" time="2000" repeat="10000"></autoscroll>
			</control>
			<control type="scrollbar" id="302">
			  <description>scroll bar</description>
			  <posx>735</posx>
			  <posy>80</posy>
			  <width>5</width>
			  <height>200</height>
			  <texturesliderbackground border="6">default-scroll_back.png</texturesliderbackground>
			  <texturesliderbar border="6">default-scroll_mid.png</texturesliderbar>
			  <texturesliderbarfocus border="6">default-scroll_mid.png</texturesliderbarfocus>
			  <textureslidernib>-</textureslidernib>
			  <textureslidernibfocus>-</textureslidernibfocus>
			  <orientation>vertical</orientation>
			  <showonepage>false</showonepage>
			  <visible>Control.IsVisible(3002)</visible>
			</control>
			<control type="image">
				<description>sep</description>
				<posx>40</posx>
				<posy>295</posy>
				<width>700</width>
				<height>1</height>
				<texture>separator.png</texture>
			</control>
            <control type="radiobutton" id="1007">
                <description>Dont show again</description>
                <posx>40</posx>
                <posy>305</posy>
                <width>700</width>
                <height>30</height>
                <align>left</align>
                <aligny>center</aligny>
                <label>$LOCALIZE[30051]</label>
                <font>font13</font>
                <textcolor>white</textcolor>
                <texturefocus>amt-input-focus.png</texturefocus>
                <texturenofocus>amt-input-nofocus.png</texturenofocus>
                <textureradiofocus>amt-settings-check-box.png</textureradiofocus>
                <textureradionofocus>amt-settings-check-boxNF.png</textureradionofocus>
                <disabledcolor>60d0d0d0</disabledcolor>
                <shadowcolor>ff000000</shadowcolor>
				<colordiffuse>FFFFFFFF</colordiffuse>
				<ondown>1001</ondown>
            </control>
			<control type="button" id="1001">
				  <description>Close</description>
				  <posx>300</posx>
				  <posy>355</posy>
				  <width>200</width>
				  <height>40</height>
				  <visible>true</visible>
				  <colordiffuse>FFFFFFFF</colordiffuse>
				  <label>$LOCALIZE[30052]</label>
				  <font>font18</font>
				  <textcolor>white</textcolor>
				  <disabledcolor>80FFFFFF</disabledcolor>
				  <align>center</align>
				  <aligny>center</aligny>
				  <textoffsetx></textoffsetx>
				  <textoffsety></textoffsety>
				  <pulseonselect></pulseonselect>
				  <onclick></onclick>
				  <onup>1007</onup>
				  <ondown></ondown>
				  <onleft></onleft>
				  <onright></onright>
			</control>
		</control>
	</controls>
</window>